#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window


<FileChooserDialog>:
    file_chooser: file_chooser
    BoxLayout:
        size: root.size
        orientation: "vertical"
        FileChooserIconView:
            id: file_chooser
            filters: ['*.png', '*.jpg', '*.jpeg', '*.bmp', '*.tiff', '*.webp']
        Button:
            size_hint_max_y: 40
            text: 'Open'
            on_release: root.open(file_chooser.selection)



<PhotoShopWidget>:
    images_panel: images_panel
    primary_tab: primary_tab
    secondary_tab: secondary_tab
    image1: image1
    image2: image2
    filter_button: filter_button
    tool_button: tool_button
    color_button: color_button
    extra_input: extra_input
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'data/images/background.jpg'
                size: self.size

        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            # pos_hint: {'top': 1}
            height: 60
            # canvas: 
            #     Color:
            #         rgb: 0, 1, 0
            #     Rectangle:
            #         size: self.size
            Button:
                size_hint_max_x: 120
                size_hint_min_y: 100
                text: 'Load'
                on_release: root.load_image()
            Button:
                id: tool_button
                text: 'Select a tool'
            Button:
                id: filter_button
                text: 'Apply filter'
            Button:
                size_hint_max_x: 120
                size_hint_min_y: 100
                text: 'Save'
                on_release: root.save_image()

        TabbedPanel:
            id: images_panel
            do_default_tab: False
            tab_pos: 'left_mid'
            TabbedPanelItem:
                id: primary_tab
                text: 'primary'
                BoxLayout:
                    padding: 0
                    Scatter:
                        id: image1
                        height: self.height
                        scale: 1
                        do_rotation: False
                        do_translation: False
                        auto_bring_to_front: False
            TabbedPanelItem:
                id: secondary_tab
                text: 'secondary'
                BoxLayout:
                    padding: 0
                    Scatter:
                        id: image2
                        height: self.height
                        scale: 1
                        do_rotation: False
                        do_translation: False
                        auto_bring_to_front: False

        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            height: 70
            Button:
                id: color_button
                text: 'Change Color'
                on_release: root.toggle_color()
            TextInput:
                id: extra_input
                text: 'extra parameters...'


