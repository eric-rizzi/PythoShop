    "version": "0.2.0",
    "configurations": [
        {
            "name": "PythoShop",
            "type": "python",
            "request": "launch",
            "program": "pythoshop.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Install prereqs",
            "type": "python",
            "request": "launch",
            "module": "pip",
            "args": [
                "install",
                "pillow",
                "Kivy"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "program": "tests/test_runner.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
