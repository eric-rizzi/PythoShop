    "version": "0.2.0",
    "configurations": [
        {
            "name": "0 - Prereqs: Install prereqs",
            "type": "debugpy",
            "request": "launch",
            "module": "pip",
            "args": [
                "install",
                "pillow",
                "Kivy"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "1 - Prep: Gen solution",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/pickleImages.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "1 - Prep: Distribute files",
            "type": "debugpy",
            "request": "launch",
            "program": "admin/updateStudentsFiles.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "2 - Run: PythoShop",
            "type": "debugpy",
            "request": "launch",
            "program": "PythoShop.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "3 - Tests: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/testRunner.py",
            "args": [
                "--all",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "3 - Tests: Run Specific Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/testRunner.py",
            "args": [],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "4 - Assess: Grade All",
            "type": "debugpy",
            "request": "launch",
            "program": "admin/gradeAll.py",
            "args": [
                ">",
                "testResults.tsv",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/admin:${workspaceFolder}/tests"
            }
        },
        {
            "name": "4 - Assess: Grade One",
            "type": "debugpy",
            "request": "launch",
            "program": "admin/gradeOne.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/admin:${workspaceFolder}/tests"
            }
        },
        {
            "name": "4 - Assess: Plagiarism check",
            "type": "debugpy",
            "request": "launch",
            "module": "plagiarismCheck",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/admin",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}